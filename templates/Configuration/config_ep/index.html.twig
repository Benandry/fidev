{{ include('header.html.twig') }}

{% block body %}
        <a href="{{ path('app_config_ep_new') }}" class="btn btn-success"><i class="fa fa-plus"></i> Nouveau</a>

    <table class="table table-bordered">
        <thead class="alert alert-success">
            <tr>
                <th>Code Nom Produit</th>
                <th>Negatif</th>
                <th>Nombre de jour Inactif</th>
                <th>Nombre jour minimum retrait</th>
                <th>Nombre jour maximum depot</th>
                <th>Age minimmum</th>
                <th>Frais tenu compte</th>
                <th>Commission retrait cash</th>
                <th>Commission transaction</th>
                <th>Frais Fermeture compte</th>
            </tr>
        </thead>
        <tbody class="jumbotron jumbotron-fluid">
        {% for config_ep in config_eps %}
            <tr>
                <td>{{ config_ep.produitEpargne }}</td>
                <td>{{ config_ep.IsNegatif ? 'Oui' : 'Non' }}</td>
                <td>{{ config_ep.nbrjInactif }}</td>
                <td>{{ config_ep.nbMinRet }}</td>
                <td>{{ config_ep.NbrJrMaxDep }}</td>
                <td>{{ config_ep.ageMinCpt }}</td>
                <td>{{ config_ep.fraisTenuCpt }}</td>
                <td>{{ config_ep.commissionRetCash }}</td>
                <td>{{ config_ep.commissionTransf }}</td>
                <td>{{ config_ep.fraisFermCpt }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

