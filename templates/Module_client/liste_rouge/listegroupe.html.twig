{% extends "base.html.twig" %}

{% block title %}  Groupe clients liste rouge {% endblock %}
{% block head %}
    Groupe clients liste rouge
{% endblock %}

{% block body %}

    <a href="{{ path('app_liste_rouge_new') }}" class="btn btn-primary btn-sm"> <i class="fa fa-plus"></i> Ajouter</a>
        {{ form_start(form) }}
            <div class="row" style="color:black;">
                <div class="col-sm-2">
                    {{ form_row(form.Du) }}
                </div>
                <div class="col-sm-2">
                    {{ form_row(form.Au) }}
                </div>
                <div class="col-sm" style="margin-top:25px;">
                    {{ form_row(form.Filtre) }}
                </div>
            </div>
        {{ form_end(form) }}<br>
    <table class="table table1 table-bordered">
        <thead>
            <tr>
                <th>Date</th>
                <th>Code Groupe</th>
                <th>Nom Groupe</th>
                <th>Raison</th>
            </tr>
        </thead>
        <tbody class="jumbotron jumbotron-fluid" style="color:black;">
        {% for ListeRouge in listerouge %}
            <tr>
                <td>{{ ListeRouge.dateliste ? ListeRouge.dateliste|date('Y-m-d') : '' }}</td>
                <td>
                I{% for Agence in agences %}{{  "%02d" | format(Agence.id) }}{% endfor %}{{ "%06d" | format(ListeRouge.codegroupe) }}
                </td>
                <td>{{ ListeRouge.nomgroupe }}</td>
                <td>{{ ListeRouge.raison }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

