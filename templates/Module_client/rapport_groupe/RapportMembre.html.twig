{{ include('header.html.twig') }}


{% block body %}
    {% if affiche_tab == false %}
        <div class="row" style="width: 60%; margin-left: 20rem; border: 1px solid #AAA; padding: 50px;" >
            <h2 class="text-center"> Recherche membre groupes....</h2>
            {{ form_start(form) }}
                <div class="text-center" id="one_date">
                    {{ form_row(form.search_on_date) }}
                </div>
                <div id="two_date">
                    <h4 class="form-label text-center"> Entrer deux dates </h4>
                    
                        {{ form_row(form.Du) }}
                    
                        {{ form_row(form.Au) }}
                </div>

                 {{ form_row(form.Filtre) }}
            {{ form_end(form) }}
        </div>
    {% else %}

        <h2 style="color:black;">Liste des Membres :</h2>
            <table class="table1 table alert alert-primary" style="margin-top:20px;">
            <thead class="alert alert-success">
                <tr>
                    <th>Code Client</th>
                    <th>Code Groupe</th>
                    <th>Nom Client</th>
                    <th>Date d'adhesion</th>
                    <th>Nom Groupe</th>
                    <th>Adresse Email</th>
                    <th>Date de creation du groupe</th>
                </tr>
            </thead>
            <tbody class="jumbotron jumbotron-fluid" style="color:black;">
            {% for Groupe in rapportMembre %}
                    <tr>
                        <td> {{ Groupe.codeclient}}</td>
                        <td> {{ Groupe.codegroupe }}</td>
                        <td>{{ Groupe.nom_client }} {{ Groupe.prenom_client }}</td>
                        <td>{{ Groupe.dateadhesion | date('d-m-y') }}</td>
                        <td>{{ Groupe.nomGroupe }}</td>
                        <td>{{ Groupe.email }}</td>
                        <td>{{ Groupe.dateInscription | date('d-m-y') }}</td>
                    </tr>
            {% endfor %} 
            </tbody>
        </table>
    {% endif %}

    {% block javascript %}

            <script>
                    $(document).ready(function(){
                        $("#filtre_rapport_membre_search_on_date").on('change',function(){
                            
                            $('#two_date').hide();
                        });

                        $("#filtre_rapport_membre_Du").on('change',function(){
                            $('#one_date').hide(); 
                        });
                        
                        $("#filtre_rapport_membre_Au").on('change',function(){
                            $('#one_date').hide(); 
                        });
                    });
            </script>
    {% endblock %}

{% endblock %}

{{ include('footer.html.twig') }}
