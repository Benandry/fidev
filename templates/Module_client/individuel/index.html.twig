{% block body %}

    <a href="{{ path('app_individuel_new') }}" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i> Ajouter</a><br><br>
    {{ include('modal.html.twig')}}
    {# Champ pour la recherche #}
        {{ form_start(formulaire) }}    
            <div class="row" >
                <div class="col-sm-5" >
                    {{ form_row(formulaire.Rechercheclient) }}
