                <div class="col-sm-5" >
                    {{ form_row(formulaire.Recherche) }}
                </div>
            </div>
        {{ form_end(formulaire) }}
    <table class="table1 table table-borderd p-5 m-3" id="datatable-buttons">
        <thead>
            <tr>
                <th>Code Client</th>
                <th>Nom et prenom client</th>
                <th>Cin</th>
                <th>Date inscription</th>
                <th>Sexe</th>
                <th></th>
            </tr>
        </thead>
        <tbody class="jumbotron jumbotron-fluid" style="color:black;">
        {% for Individuelclient in individuelclients %}
            <tr>
                <th> {{ Individuelclient.codeclient }} </th>
                {# <td>{{ Individuelclient.codeindividuel }}</td> #}
                <td>{{ Individuelclient.nomClient }} {{ Individuelclient.prenomClient }} </td>
                <td>{{ Individuelclient.cin }}</td>
                <td>{{ Individuelclient.dateInscription ? Individuelclient.dateInscription|date('Y-m-d') : '' }}</td>
                <td>{{ Individuelclient.sexe }}</td>
                <td>
                    <div class="row">
                        <div class="col-2 col-sm-2">
                            <a href="{{ path('app_individuel_show', {'id': Individuelclient.id}) }}" class="btn btn-primary btn-sm"><i class="fa fa-eye"></i></a>
                        </div>
                        <div class="col-2 col-sm-2">
                            <a href="{{ path('app_individuel_edit', {'id': Individuelclient.id}) }}" class="btn btn-warning btn-sm"><i class="fa fa-edit"></i> </a>
                        </div>
                        <div class="col-auto col-sm-auto">
                            {{ include('Module_client/individuel/_delete_form.html.twig') }}
                        </div> 
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="28">no records found</td>
            </tr>
      
         {% endfor %}
        </tbody>
    </table>

