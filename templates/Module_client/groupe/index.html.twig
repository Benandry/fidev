{{ include('header.html.twig') }}

{% block body %}

{{ include('modal.html.twig') }}

    <table class="table1 table">
        <thead class="alert alert-success">
            <tr>
                <th>Code groupe</th>
                <th>Nom Groupe</th>
                <th>Date Inscription</th>
                <th>Numero Mobile</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody class="jumbotron jumbotron-fluid" style="color:black;">
        {% for Groupe in groupes %}
            <tr>
                <td>{{ Groupe.codegroupe }}</td>
                <td>{{ Groupe.nomGroupe }}</td>
                <td>{{ Groupe.dateInscription ? Groupe.dateInscription|date('Y-m-d') : '' }}</td>
                <td>{{ Groupe.numeroMobile }}</td>
                <td>{{ Groupe.email }}</td>
                <td>
                    <div class="col-sm-4">
                        <a href="{{ path('app_groupe_show', {'id': Groupe.id}) }}" class="btn btn-primary btn-sm"><i class="fa fa-eye"> Afficher </i></a>
                    </div>
                    <div class="col-sm-4">
                        <a href="{{ path('app_groupe_edit', {'id': Groupe.id}) }}" class="btn btn-warning btn-sm"><i class="fa fa-edit"></i> Editer </a>
                    </div>
                    <div class="col-sm-4">
                        {{ include('Module_client/groupe/_delete_form.html.twig') }}
                    </div>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_groupe_new') }}" class="btn btn-primary btn-sm" ><i class="fa fa-book"></i>Ajouter nouveau </a>

{% endblock %}

{{ include('footer.html.twig') }}
